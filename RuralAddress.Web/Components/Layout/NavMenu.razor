@code {
    private bool collapseNavMenu = true;
    private string? lastBackupMessage = "Iniciando...";
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        CheckLastBackup();
    }

    private async Task OnBackupFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        bool confirmed = await JS.InvokeAsync<bool>("confirm",
            "Atenção: Isso apagará os dados atuais e substituirá pelos do backup.\n\nDeseja continuar?");

        if (!confirmed) return;

        try
        {
            // Upload Logic separated to avoid 'using' scope issues
            await UploadBackup(file);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Erro ao preparar arquivo: " + ex.Message);
            return;
        }
    }

    @inject RuralAddress.Web.Services.RestoreService RestoreService

    private async Task UploadBackup(IBrowserFile file)
    {
        try
        {
            // Max 100MB
            using var stream = file.OpenReadStream(100 * 1024 * 1024);
            await RestoreService.RestoreFromStreamAsync(stream);
            
            await JS.InvokeVoidAsync("alert", "Sucesso! O sistema foi restaurado.");
            NavigationManager.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Falha na restauração: " + ex.Message);
        }
    }

    class ErrorResponse { public string message { get; set; } public string details { get; set; } }

    private void CheckLastBackup()
    {
        try
        {
            string backupPath = Configuration["BackupPath"];

            if (string.IsNullOrEmpty(backupPath))
            {
                var userProfile = System.Environment.GetFolderPath(System.Environment.SpecialFolder.UserProfile);
                var path1 = Path.Combine(userProfile, "Google Drive", "Backups_RuralAddress");
                var path2 = Path.Combine(userProfile, "GoogleDrive", "Backups_RuralAddress");

                if (Directory.Exists(path1)) backupPath = path1;
                else if (Directory.Exists(path2)) backupPath = path2;
                else backupPath = path1;
            }

            if (Directory.Exists(backupPath))
            {
                var directoryInfo = new DirectoryInfo(backupPath);
                var latestFile = directoryInfo.GetFiles("RuralAddress_*.sql")
                                              .OrderByDescending(f => f.CreationTime)
                                              .FirstOrDefault();

                if (latestFile != null)
                {
                    lastBackupMessage = $"Último Backup: {latestFile.CreationTime:dd/MM HH:mm}";
                }
                else
                {
                    lastBackupMessage = "Último Backup: Nenhum";
                }
            }
            else
            {
                lastBackupMessage = "Backup n/c (Dir?)";
            }
        }
        catch (Exception ex)
        {
            lastBackupMessage = "Erro Backup";
            // Logger.LogError(ex, "Error checking backup");
        }
    }
}
